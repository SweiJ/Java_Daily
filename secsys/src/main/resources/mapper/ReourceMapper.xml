<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swei.secsys.mapper.ResourceMapper">

    <select id="getResource" resultType="com.swei.secsys.pojo.Resource">
        select * from resource where type = 1
    </select>

    <select id="getResourceIdsByUserId" resultType="java.lang.Long">
        SELECT
            rr.resource_id
        FROM
            user_role ur
                INNER JOIN role_resource rr ON ur.role_id = rr.role_id
        WHERE
            ur.user_id = #{id}
    </select>
</mapper>
