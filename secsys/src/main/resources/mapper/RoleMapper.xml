<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swei.secsys.mapper.RoleMapper">


    <select id="getRoles" resultType="com.swei.secsys.pojo.Role">
        SELECT
            r.id, r.`name`
        FROM
            user_role ur, role r
        where
            ur.role_id = r.id AND ur.user_id = #{id}
    </select>

</mapper>